
import java.util.Scanner;

//meu primeiro programa em java
public class JavaApplication9 
{
// exercicio 3
        public static void main(String[] args) {
        Scanner input =  new Scanner( System.in ); 
        
        int num_conta;
        int saldo_in;
        int itens_cobrados;
        int total_cred_aplicado;
        int limite_credito;
        int opcao;
        int novo_saldo;
        
        do {
            System.out.println("Informe o numero da conta: ");
            num_conta = input.nextInt();
            System.out.println("Informe saldo no inicio do mes: ");
            saldo_in = input.nextInt();
            System.out.println("Informe o total de itens cobrados: ");
            itens_cobrados = input.nextInt();
            System.out.println("Informe o total de creditos aplicados: ");
            total_cred_aplicado = input.nextInt();
            System.out.println("Informe o limite de credito autorizado: ");
            limite_credito = input.nextInt();
        novo_saldo = (saldo_in + itens_cobrados + total_cred_aplicado) - limite_credito;
        if(novo_saldo > limite_credito) {
            System.out.println("limite de credito excedido\n");
        }
        System.out.print("deseja continuar? (1) == sim | (0) == não: ");
        opcao = input.nextInt();
    }   
           
        
        
        
        
        
